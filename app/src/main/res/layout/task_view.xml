<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schoolandroid.activity.CourseActivity"
    android:tag="taskFrag"
    android:transcriptMode="alwaysScroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/showAllTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@font/bruta_regular"
                android:background="@drawable/rounded_corner_grey"
                android:paddingHorizontal="10dp"
                android:text="все задания"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="15dp"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@font/bruta_regular"
                android:background="@drawable/rounded_corner_grey"
                android:text="вперёд" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/bruta_semibold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:text="Задание"/>

            <TextView
                android:id="@+id/taskText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginBottom="24dp"
                android:textSize="14sp"
                android:lineSpacingExtra="5sp"
                android:fontFamily="@font/bruta_regular"
                android:textColor="@color/black"
                android:text="Описание"/>

            <LinearLayout
                android:id="@+id/editAnswerContainer"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextAnswer"
                    style="@style/profile_fragment_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="34dp"
                    android:inputType="text"
                    android:hint="ОТВЕТ"
                    android:autofillHints="Введите ответ"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sendAnswer"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingHorizontal="20dp"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="50dp"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="@font/bruta_regular"
                android:background="@drawable/rounded_corner_coral"
                android:text="Отправить"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="5dp"
        android:transcriptMode="alwaysScroll">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tabRecycler"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />
    </androidx.core.widget.NestedScrollView>
</FrameLayout>