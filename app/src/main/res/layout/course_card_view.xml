<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/courseBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_corner_white"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Tags -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                style="@style/course_card_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_coral"
                android:text="ЕГЭ" />

            <TextView
                style="@style/course_card_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_coral"
                android:text="11 класс" />

            <TextView
                style="@style/course_card_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_coral"
                android:text="математика" />

<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/courseTags"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"/>-->

        </LinearLayout>

        <!-- Name -->
        <TextView
            android:id="@+id/coursename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/bruta_semibold"
            android:includeFontPadding="false"
            android:text="ЕГЭ Математика"
            android:textColor="#000000"
            android:textSize="25sp" />

        <!-- Teacher -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginBottom="22dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_marginRight="15.8dp"
                android:background="@drawable/rounded_corner_coral" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/coursetutor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bruta_regular"
                    android:text="Борис Трушин"
                    android:textColor="#000000"
                    android:textSize="13.67sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15.8dp"
                    android:fontFamily="@font/bruta_regular"
                    android:text="5+ лет преподавания"
                    android:textColor="#000000"
                    android:textSize="11sp" />

                <TextView
                    style="@style/course_card_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/course_card_view_teacher_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/bruta_regular"
                    android:text="подробнее"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/coursedescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/bruta_regular"
            android:lineSpacingExtra="5sp"
            android:text="На этом курсе вы научитесь правильно скипать пары, дойдете до уровня магистра в пивопитии и получите вечнуюю отсрочку от армии"
            android:textColor="#000000"
            android:textSize="13.5sp" />

        <!-- Extra info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/clock" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:fontFamily="@font/bruta_semibold"
                        android:text="8"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:fontFamily="@font/bruta_regular"
                        android:text="месяцев"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/clock" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:fontFamily="@font/bruta_semibold"
                        android:text="150"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:fontFamily="@font/bruta_regular"
                        android:text="часов занятий"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:src="@drawable/arrow_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-3dp"
                android:fontFamily="@font/bruta_regular"
                android:text="развернуть"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>