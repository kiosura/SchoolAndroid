<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_marginTop="34dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner_white"
            android:layout_marginHorizontal="34dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_corner_coral" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bruta_regular"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/userLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15.8dp"
                    android:fontFamily="@font/bruta_regular"
                    android:text="email or phone number"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/course_card_teacher"
                        android:id="@+id/updateUserButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/course_card_view_teacher_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/bruta_regular"
                        android:textSize="11sp"
                        android:layout_marginRight="15dp"
                        android:text="изменить"/>

                    <TextView
                        style="@style/course_card_teacher"
                        android:id="@+id/logoutUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/course_card_view_teacher_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/bruta_regular"
                        android:textSize="11sp"
                        android:text="выйти"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/archiveButton"
            style="@style/archive_card"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginHorizontal="34dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_corner_white"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bruta_regular"
                android:text="архив курсов"
                android:textColor="#000000" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>