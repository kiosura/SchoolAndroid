<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/courseBodyProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="34dp"
        android:layout_marginVertical="12dp"
        android:padding="24dp"
        android:elevation="7dp"
        android:background="@drawable/rounded_corner_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/courseNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bruta_semibold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"
            android:text="ЕГЭ по математике"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lessonProgressBarProfile"
                android:layout_width="wrap_content"
                android:layout_weight="11"
                android:layout_height="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lessonProgressBarLeftProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/lesson_progress_bar_left"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lessonProgressBarRightProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/lesson_progress_bar_right"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/lessonProgressTextProfile"
                android:layout_weight="1"
                android:layout_marginTop="-3dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bruta_regular"
                android:textColor="#000000"
                android:text="0%"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>