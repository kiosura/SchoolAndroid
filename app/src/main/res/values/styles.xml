<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="course_card_tag" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/bruta_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <style name="course_card_teacher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/bruta_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <style name="profile_fragment_input_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/bruta_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:height">55dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="filter_and_switch_card">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:elevation">10dp</item>
    </style>
    <style name="archive_card">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:elevation">10dp</item>
    </style>
    <style name="tabs_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/bruta_semibold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="tabs" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_layout</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/tab_layout_bg</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">#000000</item>
    </style>
</resources>